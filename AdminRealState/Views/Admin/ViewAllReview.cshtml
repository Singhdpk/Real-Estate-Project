@model IEnumerable<AdminPanel.Models.Review>
@{
    ViewBag.Title = "ViewAllReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ViewAllReview", "", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <ul class="nav nav-tabs">
        <li class="active"><b>Review</b></li>
    </ul>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.projects.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.users.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.users.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.users.EmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                <b>DELETE</b>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.projects.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.users.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.users.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.users.EmailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteReview", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
}

