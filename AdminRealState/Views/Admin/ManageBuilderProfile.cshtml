@model IEnumerable<AdminRealState.Models.MasterBuilderProfile>
@{
    ViewBag.Title = "ManageBuilderProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ManageBuilderProfile", "", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <ul class="nav nav-tabs">
        <li class="active"><b>ManagBuilderProfile</b></li>
    </ul>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                @if (ViewBag.dataId == null || ViewBag.dataId != item.Id)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                }
                else
                {
                    <td>

                        <input type="hidden" name="Id" value=@item.Id />
                        <input type="text" name="Name" value="@item.Name" />
                    </td>
                }

                @if (ViewBag.dataId == null || ViewBag.dataId != item.Id)
                {
                    <td>
                        @Html.ActionLink("Edit", "ManageBuilderProfile", new { id = item.Id })
                    </td>
                }
                else
                {
                    <td>
                        <input type="submit" value="Save" />

                    </td>
                }
                <td>
                    @Html.ActionLink("Delete", "DeleteMasterBuilderProfile", new { id = item.Id })
                </td>

            </tr>
            }
        </table>
        <b>Add new type of Builder Profile</b>
        <input type="text" name="Name" />
        <input type="submit" value="Add" />
}

